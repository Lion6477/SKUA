<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane style="-fx-background-color: #f5f0e8;" styleClass="neutral-grey" stylesheets="@../css/SKUA.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ua.skushnerov.controller.SKUAController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">
            <center>
                <AnchorPane prefWidth="500.0" BorderPane.alignment="CENTER">
                    <children>
                        <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <center>
                                <AnchorPane BorderPane.alignment="CENTER">
                                    <children>
                                        <AnchorPane fx:id="sortFilesContentPage" AnchorPane.bottomAnchor="0.0"
                                                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                                    AnchorPane.topAnchor="0.0">
                                            <children>
                                                <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                                    <HBox alignment="CENTER" prefHeight="29.0" prefWidth="400.0"
                                                          spacing="10">
                                                        <Label alignment="CENTER" prefWidth="150.0"
                                                               text="Select Directory">
                                                            <padding>
                                                                <Insets bottom="5.0" top="5.0"/>
                                                            </padding>
                                                            <font>
                                                                <Font name="System Bold" size="18.0"/>
                                                            </font>
                                                        </Label>
                                                        <VBox.margin>
                                                            <Insets/>
                                                        </VBox.margin>
                                                        <padding>
                                                            <Insets bottom="5.0" top="5.0"/>
                                                        </padding>
                                                    </HBox>

                                                    <HBox alignment="CENTER" spacing="10">
                                                        <TextField fx:id="directoryTextField" promptText="C:\Downloads"
                                                                   style="-fx-pref-width: 250.0;">
                                                            <font>
                                                                <Font size="14.0"/>
                                                            </font>
                                                        </TextField>
                                                        <VBox.margin>
                                                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                                        </VBox.margin>
                                                    </HBox>
                                                    <HBox alignment="CENTER" spacing="10">

                                                        <Button fx:id="browseButton" styleClass="resources"
                                                                text="Browse">
                                                            <font>
                                                                <Font size="14.0"/>
                                                            </font>
                                                            <HBox.margin>
                                                                <Insets/>
                                                            </HBox.margin>
                                                            <padding>
                                                                <Insets bottom="5.0" left="10.0" right="10.0"
                                                                        top="5.0"/>
                                                            </padding>
                                                        </Button>

                                                        <Button fx:id="sortFiles" text="Sort Files">
                                                            <font>
                                                                <Font size="14.0"/>
                                                            </font>
                                                            <padding>
                                                                <Insets bottom="5.0" left="10.0" right="10.0"
                                                                        top="5.0"/>
                                                            </padding>
                                                        </Button>
                                                        <VBox.margin>
                                                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                                        </VBox.margin>
                                                    </HBox>
                                                </VBox>
                                            </children>
                                        </AnchorPane>
                                        <AnchorPane fx:id="copyFandDContentPage" visible="false"
                                                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <children>
                                                <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                                    <children>
                                                        <HBox alignment="CENTER" spacing="10">
                                                            <Label alignment="CENTER" prefWidth="150.0" text="Copy Page"
                                                                   textAlignment="CENTER">
                                                                <padding>
                                                                    <Insets bottom="5.0" top="5.0"/>
                                                                </padding>
                                                                <font>
                                                                    <Font name="System Bold" size="18.0"/>
                                                                </font>
                                                            </Label>
                                                        </HBox>
                                                        <HBox alignment="CENTER" spacing="10">
                                                            <TextField fx:id="sourceDirectoryTextField"
                                                                       prefWidth="300.0" promptText="Source Directory">
                                                                <padding>
                                                                    <Insets bottom="5.0" top="5.0"/>
                                                                </padding>
                                                                <font>
                                                                    <Font size="14.0"/>
                                                                </font>
                                                                <opaqueInsets>
                                                                    <Insets/>
                                                                </opaqueInsets>
                                                                <HBox.margin>
                                                                    <Insets bottom="5.0" top="5.0"/>
                                                                </HBox.margin>
                                                            </TextField>
                                                            <Button fx:id="browseSourceDirectoryButton" text="Browse">
                                                                <font>
                                                                    <Font size="14.0"/>
                                                                </font>
                                                                <HBox.margin>
                                                                    <Insets bottom="5.0" top="5.0"/>
                                                                </HBox.margin>
                                                            </Button>
                                                        </HBox>
                                                        <HBox alignment="CENTER" spacing="10">
                                                            <TextField fx:id="destinationDirectoryTextField"
                                                                       prefWidth="300.0"
                                                                       promptText="Destination Directory">
                                                                <padding>
                                                                    <Insets bottom="5.0" top="5.0"/>
                                                                </padding>
                                                                <HBox.margin>
                                                                    <Insets bottom="5.0" top="5.0"/>
                                                                </HBox.margin>
                                                                <font>
                                                                    <Font size="14.0"/>
                                                                </font>
                                                            </TextField>
                                                            <Button fx:id="browseDestinationDirectoryButton"
                                                                    text="Browse">
                                                                <font>
                                                                    <Font size="14.0"/>
                                                                </font>
                                                                <HBox.margin>
                                                                    <Insets bottom="5.0" top="5.0"/>
                                                                </HBox.margin>
                                                            </Button>
                                                        </HBox>
                                                        <HBox alignment="CENTER" spacing="10">
                                                            <Button fx:id="startCopyingButton" text="Start Copying">
                                                                <font>
                                                                    <Font size="14.0"/>
                                                                </font>
                                                                <padding>
                                                                    <Insets bottom="5.0" left="10.0" right="10.0"
                                                                            top="5.0"/>
                                                                </padding>
                                                            </Button>
                                                        </HBox>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </AnchorPane>
                                    </children>
                                </AnchorPane>
                            </center>
                            <bottom>
                                <AnchorPane BorderPane.alignment="CENTER">
                                    <children>
                                        <TextField fx:id="resultTextField" disable="true" editable="false"
                                                   promptText="Result" style="-fx-pref-width: 250.0;"
                                                   AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="25.0"
                                                   AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="5.0">
                                        </TextField>
                                    </children>
                                </AnchorPane>
                            </bottom>
                        </BorderPane>
                    </children>
                </AnchorPane>
            </center>
            <left>
                <AnchorPane fx:id="slider" prefHeight="200.0" prefWidth="125.0" styleClass="menu-slider"
                            BorderPane.alignment="CENTER">
                    <children>
                        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                              AnchorPane.topAnchor="0.0">
                            <children>
                                <Button fx:id="fileSorterButton" prefHeight="30.0" prefWidth="125.0"
                                        styleClass="sidebar-item" text="Sort Files">
                                    <VBox.margin>
                                        <Insets/>
                                    </VBox.margin>
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../image/icon/icons8-file-64.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="copyPageButton" prefHeight="30.0" prefWidth="125.0"
                                        styleClass="sidebar-item" text="Copy F&amp;D">
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../image/icon/icons8-file-64.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </left>
            <top>
                <AnchorPane style="-fx-background-color: #f5f0e8;" BorderPane.alignment="CENTER">
                    <children>
                        <Pane prefHeight="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                              AnchorPane.topAnchor="0.0"/>
                        <AnchorPane layoutY="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
                            <children>
                                <Button fx:id="menu" mnemonicParsing="false" prefHeight="50.0" prefWidth="125.0"
                                        styleClass="menu-button" text="Menu">
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../image/icon/icons8-menu-24.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <font>
                                        <Font name="System Bold" size="15.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="menuClose" mnemonicParsing="false" prefHeight="50.0" prefWidth="125.0"
                                        style="-fx-background-color: transparent;" styleClass="menu-button" text="Menu"
                                        visible="false">
                                    <graphic>
                                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                        </ImageView>
                                    </graphic>
                                    <font>
                                        <Font name="System Bold" size="15.0"/>
                                    </font>
                                </Button>
                            </children>
                        </AnchorPane>
                    </children>
                </AnchorPane>
            </top>
        </BorderPane>
    </children>
</AnchorPane>
