    <Label alignment="CENTER" layoutX="91.0" layoutY="14.0" style="-fx-font-size: 22.0;" text="Select Directory:">
        <font>
            <Font size="22.0" />
        </font>
    </Label>
    <TextField fx:id="directoryTextField" layoutX="45.0" layoutY="65.0" promptText="C:\Downloads" style="-fx-pref-width: 250.0;" />
     <Button fx:id="browseButton" layoutX="41.0" layoutY="117.0" onAction="#browseButtonClicked" style="-fx-pref-width: 100.0;" text="Browse" />
     <Button fx:id="sortFiles" layoutX="199.0" layoutY="117.0" onAction="#sortFilesButtonClicked" style="-fx-pref-width: 100.0;" text="Sort Files" />
   <TextField fx:id="resultTextField" editable="false" layoutX="45.0" layoutY="154.0" promptText="Result" style="-fx-pref-width: 250.0;">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </TextField>
</AnchorPane>
